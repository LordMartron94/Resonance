{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 28 },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/toolchains/clangcl-llvm.cmake",
      "cacheVariables": {
        "CMAKE_C_STANDARD": "90",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_C_EXTENSIONS": "OFF"
      },
      "environment": { "LLVM_HOME": "C:/CLang" }
    },
    {
      "name": "clangcl-debug",
      "displayName": "Clang-cl Debug",
      "inherits": "base",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" },
      "vendor": { "jetbrains.com/clion": { "toolchain": "C89" } }
    },
    {
      "name": "clangcl-release",
      "displayName": "Clang-cl Release",
      "inherits": "base",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" },
      "vendor": { "jetbrains.com/clion": { "toolchain": "C89" } }
    }
  ],
  "buildPresets": [
    { "name": "clangcl-debug",   "configurePreset": "clangcl-debug",   "jobs": 14 },
    { "name": "clangcl-release", "configurePreset": "clangcl-release", "jobs": 14 }
  ]
}
